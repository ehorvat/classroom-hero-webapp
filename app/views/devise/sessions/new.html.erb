<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: new_user_session do |f| %>
  <%= devise_error_messages! %>
<div id="signin-field-container" style="width: 370px; margin: 0 auto;">         
  <div class="field">
  <div class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => 'Email', class: 'input form-control fields'  %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', class: 'input form-control fields' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
