<h1>Sign In</h1>


 	<form accept-charset="UTF-8" method="POST" action="/login" id="signup-form">
 		<input name="utf8" type="hidden" value="&#x2713;" />
    	<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
          <% if flash[:error] %>
      <div class="center alert alert-danger user-errors" role="alert"><%= flash[:error] %></div>
    <% end %>
        <div style="width: 370px; margin: 0 auto;">         
         	<input type="text" name="session[email]" id="session_email"
			  	class="center input form-control fields" placeholder="Email"
			  	style="max-width: 400px;"><br>
			<input type="password" name="session[password]" id="session_password"
			  	class="center input form-control fields" placeholder="Password"
			  	style="max-width: 400px;"><br> 

			<input type="submit" name="commit" class=" btn btn-primary" value="Log in"/>
		</div>
		   

	</form>